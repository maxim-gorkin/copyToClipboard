			<tr>
				<td class="confluenceTd">Copy to Clipboard</td>
				<td class="confluenceTd"><p id="q1" hidden>TESTTESTTEST</p><button onclick="copyToClipboard('#q1')">Copy to Clipboard</button></td>
			</tr>
